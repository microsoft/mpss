{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "settings-base",
            "hidden": true,
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
                "MPSS_BUILD_TESTS": "NO",
                "MPSS_BUILD_SHARED": "NO"
            }
        },
        {
            "name": "windows-base",
            "hidden": true,
            "inherits": "settings-base",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-debug-tests",
            "displayName": "x64 Debug (with tests)",
            "inherits": "x64-debug",
            "cacheVariables": {
                "MPSS_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "inherits": "x64-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "x64-release-tests",
            "displayName": "x64 Release (with tests)",
            "inherits": "x64-release",
            "cacheVariables": {
                "MPSS_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "x86-debug",
            "displayName": "x86 Debug",
            "inherits": "windows-base",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x86-debug-tests",
            "displayName": "x86 Debug (with tests)",
            "inherits": "x86-debug",
            "cacheVariables": {
                "MPSS_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "x86-release",
            "displayName": "x86 Release",
            "inherits": "x86-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "x86-release-tests",
            "displayName": "x86 Release (with tests)",
            "inherits": "x86-release",
            "cacheVariables": {
                "MPSS_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "generator": "Ninja",
            "inherits": "settings-base",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        },
        {
            "name": "linux-debug-tests",
            "displayName": "Linux Debug (with tests)",
            "inherits": "linux-debug",
            "cacheVariables": {
                "MPSS_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "inherits": "linux-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-release-tests",
            "displayName": "Linux Release (with tests)",
            "inherits": "linux-release",
            "cacheVariables": {
                "MPSS_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "macos-debug",
            "displayName": "macOS Debug",
            "generator": "Ninja",
            "inherits": "settings-base",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        },
        {
            "name": "macos-debug-tests",
            "displayName": "macOS Debug (with tests)",
            "inherits": "macos-debug",
            "cacheVariables": {
                "MPSS_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "macos-release",
            "displayName": "macOS Release",
            "inherits": "macos-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "macos-release-tests",
            "displayName": "macOS Release (with tests)",
            "inherits": "macos-release",
            "cacheVariables": {
                "MPSS_BUILD_TESTS": "ON"
            }
        }
    ]
}
